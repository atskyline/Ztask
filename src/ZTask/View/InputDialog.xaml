<Window x:Class="ZTask.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        Width="300"
        Height="150"
        Loaded="InputDialog_OnLoaded"
        mc:Ignorable="d ignore">

    <StackPanel >
        <Label x:Name="Label" Margin="4" HorizontalAlignment="Stretch" Content="Content"/>
        <TextBox x:Name="TextBox" Margin="4"/>
        <DockPanel LastChildFill="False" HorizontalAlignment="Stretch" Margin="0,8,0,0">
            <Button DockPanel.Dock="Left"  Width="75" Content="确定" Margin="4" Click="OnYesButtonClick"/>
            <Button DockPanel.Dock="Right" Width="75" Content="取消" Margin="4" Click="OnNoButtonClick"/>
        </DockPanel>
    </StackPanel>
</Window>
